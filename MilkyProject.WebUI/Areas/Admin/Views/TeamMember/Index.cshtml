@model List<ResultTeamMemberDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Layout/Index.cshtml";
    int count = 0;
}

<h6 class="mb-4">UI Ekibimiz Alanı</h6>
<table class="table table-hover">
    <thead>
        <tr class="bg-light">
            <th>#</th>
            <th>Adı Soyadı</th>
            <th>Unvan</th>
            <th>Yayında mı?</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <td>@count</td>
                <td>@item.NameSurname</td>
                <td>@item.Title</td>
                <td>@item.Status</td>
                <td>
                    <a href="/Admin/TeamMember/UpdateTeamMember/@item.TeamMemberId" class="btn btn-secondary">Detay</a>
                    <a href="/Admin/TeamMember/DeleteTeamMember/@item.TeamMemberId" class="btn btn-danger">Sil</a>
                    <a href="/Admin/TeamMemberSocialMedia/SocialMediaList/@item.TeamMemberId" class="btn btn-primary">Sosyal MedyaHesapları</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="/Admin/TeamMember/CreateTeamMember" class="btn btn-primary">+ Yeni Oluştur</a>
