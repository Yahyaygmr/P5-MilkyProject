@model List<ResultTestimonialDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Layout/Index.cshtml";
    int count = 0;
}
<h6 class="mb-4">UI Referanslar Alanı</h6>
<table class="table table-hover">
    <thead>
        <tr class="bg-light">
            <th>#</th>
            <th>Resim</th>
            <th>Adı Soyadı</th>
            <th>Unvanı</th>
            <th>Yayında mı?</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <td>@count</td>
                <td><img src="@item.ImageUrl" style="width:55px; height:55px; object-fit:cover;"/></td>
                <td>@item.NameSurname</td>
                <td>@item.Title</td>
                <td>@item.Status</td>
                <td>
                    <a href="/Admin/Testimonial/UpdateTestimonial/@item.TestimonialId" class="btn btn-secondary">Detay</a>
                    <a href="/Admin/Testimonial/DeleteTestimonial/@item.TestimonialId" class="btn btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="/Admin/Testimonial/CreateTestimonial" class="btn btn-primary">+ Yeni Oluştur</a>