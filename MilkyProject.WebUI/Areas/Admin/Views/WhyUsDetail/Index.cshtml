@model List<ResultWhyUsDetailDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Layout/Index.cshtml";
    int count = 0;
}

<h6 class="mb-4">UI Neden Biz? Detay Alanı</h6>
<table class="table table-hover">
    <thead>
        <tr class="bg-light">
            <th>#</th>
            <th>Açıklama</th>
            <th>Yayında mı?</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <td>@count</td>
                <td>@item.Description</td>
                <td>@item.Status</td>
                <td>
                    <a href="/Admin/WhyUsDetail/UpdateWhyUsDetail/@item.WhyUsDetailId" class="btn btn-secondary">Detay</a>
                    <a href="/Admin/WhyUsDetail/DeleteWhyUsDetail/@item.WhyUsDetailId" class="btn btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="/Admin/WhyUsDetail/CreateWhyUsDetail" class="btn btn-primary">+ Yeni Oluştur</a>

