@model CreateAboutUsServiceDto

@{
    ViewData["Title"] = "CreateAboutUsService";
    Layout = "~/Areas/Admin/Views/Layout/Index.cshtml";
}

<h4>UI Hakkımızda Hizmet Alanı Yeni Hizmet </h4>
<hr />
<div class="row">

    <form asp-action="CreateAboutUsService">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Title" class="control-label">Başlık</label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="control-label">Açıklama</label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Icon" class="control-label">İkon</label>
            <input asp-for="Icon" class="form-control" />
            <span asp-validation-for="Icon" class="text-danger"></span>
        </div>
        <div class="form-group form-check my-3">
            <label class="form-check-label">
                <input class="form-check-input" asp-for="Status"/> Yayınlansın Mı?
            </label>
        </div>
        <div class="form-group">
            <a href="/Admin/AboutUsService/Index" class="btn btn-warning"> Listeye Dön</a>
            <input type="submit" value="Oluştur" class="btn btn-primary" />
        </div>
    </form>
</div>

