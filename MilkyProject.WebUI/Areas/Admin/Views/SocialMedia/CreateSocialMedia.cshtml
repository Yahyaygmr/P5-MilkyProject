@model CreateSocialMediaDto
@{
    ViewData["Title"] = "CreateSocialMedia";
    Layout = "~/Areas/Admin/Views/Layout/Index.cshtml";
}

<h4>UI Sosyal Medya Hesapları Yeni Hesap Ekleme </h4>
<hr />
<div class="row">

    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="control-label">Hesap Adı</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Icon" class="control-label">Ikon</label>
            <input asp-for="Icon" class="form-control" />
            <span asp-validation-for="Icon" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Url" class="control-label">Url</label>
            <input asp-for="Url" class="form-control" />
            <span asp-validation-for="Url" class="text-danger"></span>
        </div>
        <div class="form-group form-check my-3">
            <label class="form-check-label">
                <input class="form-check-input" asp-for="Status" /> Yayınlansın Mı?
            </label>
        </div>
        <div class="form-group">
            <a href="/Admin/SocialMedia/Index" class="btn btn-warning"> Listeye Dön</a>
            <input type="submit" value="Oluştur" class="btn btn-primary" />
        </div>
    </form>
</div>

