@model List<ResultProductDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Layout/Index.cshtml";
    int count = 0;
}

<h6 class="mb-4">UI Ürünler Alanı</h6>
<table class="table table-hover">
    <thead>
        <tr class="bg-light">
            <th>#</th>
            <th>Resim</th>
            <th>Ürün</th>
            <th>Eski Fiyat</th>
            <th>Yeni Fiyat</th>
            <th>Yayında mı?</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <td>@count</td>
                <td>@item.ImageUrl</td>
                <td>@item.Name</td>
                <td>@item.OldPrice</td>
                <td>@item.NewPrice</td>
                <td>@item.Status</td>
                <td>
                    <a href="/Admin/Product/UpdateProduct/@item.ProductId" class="btn btn-secondary">Detay</a>
                    <a href="/Admin/Product/DeleteProduct/@item.ProductId" class="btn btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="/Admin/Product/CreateProduct" class="btn btn-primary">+ Yeni Oluştur</a>
